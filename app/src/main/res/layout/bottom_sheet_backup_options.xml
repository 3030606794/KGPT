<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_cloud_backup_arrow_filled"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="@string/ui_backup_settings"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/ui_select_what_you_want_to_backup"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="13sp" />

    <!-- Select All -->
    <LinearLayout
        android:id="@+id/select_all_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/ripple_settings_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingHorizontal="4dp">

        <CheckBox
            android:id="@+id/cb_select_all"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/animated_checkbox_circle"
            android:background="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/ui_select_all"
            android:textColor="?attr/colorOnSurface"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="?attr/colorOutlineVariant" />

    <!-- Scrollable Options -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- AI Commands -->
            <LinearLayout
                android:id="@+id/option_commands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_settings_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="4dp">

                <CheckBox
                    android:id="@+id/cb_commands"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    android:button="@drawable/animated_checkbox_circle"
                    android:background="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_ai_commands"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_custom_ai_commands_and_prompts"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Trigger Patterns -->
            <LinearLayout
                android:id="@+id/option_patterns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_settings_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="4dp">

                <CheckBox
                    android:id="@+id/cb_patterns"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    android:button="@drawable/animated_checkbox_circle"
                    android:background="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_trigger_patterns"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_keyboard_trigger_patterns"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Language Model -->
            <LinearLayout
                android:id="@+id/option_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_settings_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="4dp">

                <CheckBox
                    android:id="@+id/cb_model"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    android:button="@drawable/animated_checkbox_circle"
                    android:background="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_ai_model_settings"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_selected_model_and_sub_models"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Appearance -->
            <LinearLayout
                android:id="@+id/option_appearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_settings_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="4dp">

                <CheckBox
                    android:id="@+id/cb_appearance"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    android:button="@drawable/animated_checkbox_circle"
                    android:background="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/appearance"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_theme_amoled_material_you"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Blur Settings -->
            <LinearLayout
                android:id="@+id/option_blur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_settings_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="4dp">

                <CheckBox
                    android:id="@+id/cb_blur"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    android:button="@drawable/animated_checkbox_circle"
                    android:background="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_blur_settings"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_blur_intensity_and_tint_color"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- General Settings -->
            <LinearLayout
                android:id="@+id/option_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_settings_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="4dp">

                <CheckBox
                    android:id="@+id/cb_general"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    android:button="@drawable/animated_checkbox_circle"
                    android:background="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_general_settings"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_logging_internet_search_engine"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- App Triggers -->
            <LinearLayout
                android:id="@+id/option_app_triggers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_settings_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="4dp">

                <CheckBox
                    android:id="@+id/cb_app_triggers"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    android:button="@drawable/animated_checkbox_circle"
                    android:background="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_app_triggers_lab"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_per_app_ai_trigger_configs"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Text Actions -->
            <LinearLayout
                android:id="@+id/option_text_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_settings_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="4dp">

                <CheckBox
                    android:id="@+id/cb_text_actions"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    android:button="@drawable/animated_checkbox_circle"
                    android:background="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_text_actions_lab"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_ai_text_actions_and_prompts"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Sensitive Data / API Keys -->
            <LinearLayout
                android:id="@+id/option_sensitive_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_settings_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingHorizontal="4dp">

                <CheckBox
                    android:id="@+id/cb_sensitive_data"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="false"
                    android:button="@drawable/animated_checkbox_circle"
                    android:background="@null" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_api_keys_credentials"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_warning_files_with_keys_are_risky_to_share"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:alpha="0.8"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Buttons - Same style as other bottom sheets -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@android:string/cancel"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            app:cornerRadius="14dp"
            app:strokeWidth="0dp"
            app:backgroundTint="?attr/colorSurfaceContainerHigh" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/ui_backup"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_cloud_backup_arrow_filled"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="20dp" />
    </LinearLayout>

</LinearLayout>
