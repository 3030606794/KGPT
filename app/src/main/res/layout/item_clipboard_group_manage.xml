<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item_ripple"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="4dp"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Group"
            android:textColor="?attr/colorOnSurface"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_group_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0条 · 0字"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Drag handle: only visible for user groups (not 'All') -->
    <FrameLayout
        android:id="@+id/drag_handle_container"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="6dp">

        <ImageView
            android:id="@+id/iv_drag_handle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_drag_handle"
            android:tint="?attr/colorOnSurfaceVariant" />

    </FrameLayout>

    <!-- Edit (rename) button: only visible for user groups -->
    <FrameLayout
        android:id="@+id/btn_edit_container"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="6dp"
        android:contentDescription="@string/ui_edit">

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_edit"
            android:tint="?attr/colorOnSurfaceVariant" />
    </FrameLayout>

    <!-- Delete button: only visible for user groups -->
    <FrameLayout
        android:id="@+id/btn_delete_container"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="6dp"
        android:contentDescription="@string/ui_delete">

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_trash_filled"
            android:tint="?attr/colorError" />
    </FrameLayout>

</LinearLayout>
