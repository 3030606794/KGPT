<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_qj_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_input_field"
        android:backgroundTint="?attr/colorSurfaceContainerHigh"
        android:hint="@string/ui_quick_jump_name_hint"
        android:paddingHorizontal="16dp"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurfaceVariant"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_qj_trigger"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_input_field"
        android:backgroundTint="?attr/colorSurfaceContainerHigh"
        android:hint="@string/ui_quick_jump_trigger_hint"
        android:maxLength="10"
        android:paddingHorizontal="16dp"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurfaceVariant"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_qj_url"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_input_field"
        android:backgroundTint="?attr/colorSurfaceContainerHigh"
        android:hint="@string/ui_quick_jump_url_hint"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="top"
        android:inputType="textUri|textMultiLine"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurfaceVariant"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cb_qj_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/ui_quick_jump_enabled" />

    <TextView
        android:id="@+id/tv_qj_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/ui_quick_jump_help_new"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp" />

</LinearLayout>
