<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <!-- Selection mode button moved to the far-left (user request) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_mode"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/ui_select_items"
        app:icon="@drawable/ic_text_selection_filled"
        app:iconTint="?attr/colorPrimary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_group_select"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_toEndOf="@id/btn_select_mode"
        android:layout_toStartOf="@id/btn_group_add"
        android:layout_marginEnd="8dp"
        android:minWidth="42dp"
        android:minHeight="42dp"
        android:gravity="center_vertical"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:contentDescription="@string/ui_clipboard_groups"
        android:textColor="?attr/colorPrimary"
        app:cornerRadius="21dp"
        app:icon="@drawable/ic_expand_more"
        app:iconGravity="textEnd"
        app:iconTint="?attr/colorPrimary" />

    <!-- Right-side stats inside the group pill (overlay on top of the button) -->
    <TextView
        android:id="@+id/tv_group_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/btn_group_select"
        android:layout_centerVertical="true"
        android:layout_marginEnd="36dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:textSize="12sp"
        android:textColor="?attr/colorPrimary"
        android:clickable="false"
        android:focusable="false" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_group_add"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/ui_add_group"
        app:icon="@drawable/ic_add"
        app:iconTint="?attr/colorPrimary" />

</RelativeLayout>
